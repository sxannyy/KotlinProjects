<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailedWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/weather_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textAlignment="center"
        android:textSize="70px"
        android:text="Загрузка данных..." />


    <ImageView
        android:id="@+id/weather_image"
        app:layout_constraintStart_toStartOf="@id/weather_info"
        app:layout_constraintTop_toBottomOf="@id/weather_info"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/rainy"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/change_city_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/weather_image"
        app:layout_constraintTop_toBottomOf="@id/weather_image"
        android:layout_marginTop="200dp"
        android:layout_marginStart="-50dp"
        android:text="Поменять город"
        />
</androidx.constraintlayout.widget.ConstraintLayout>